@model List<Employee>

<h2>Employee List</h2>
<form method="post">
    <div class="row" style="margin-top:10px">
        <div class="col-lg-1">
            <span>First Name</span>
        </div>
        <div class="col-sm-3 col-sm-offset-2"><input type="text" class="form-control" name="name" /></div>
        <div class="col-lg-1">
            <input type="submit" value="Save" class="btn btn-primary" asp-action="elist" />
        </div>
    </div>


    <table class="table table-bordered table-hover table-striped" style="margin-top:10px">
        <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Salary</th>
        <th>Option</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FName</td>
                    <td>@item.LName</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td><input type="submit" value="Edit" asp-action="editinfo" />  <input type="submit" value="Delete" asp-action="deleteinfo" /></td>
                </tr>
            }






        </tbody>
    </table>
</form>